<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sixty"
    android:orientation="vertical"
    android:padding="30dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:contentDescription="@string/todo"
        android:foregroundGravity="top"
        android:padding="10dp"
        android:visibility="visible"
        tools:ignore="ImageContrastCheck"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="40dp"
        android:src="@drawable/baseline_account_balance_wallet_24"
        />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:foregroundGravity="center"
        android:foregroundTint="@color/ten"
        android:indeterminateTint="@color/ten"
        android:padding="20dp"
        android:progressTint="@color/ten"
        tools:layout_editor_absoluteX="120dp"
        tools:layout_editor_absoluteY="473dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="30dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="SmartTrack: Your Expenses, Your Way!"
        android:textAllCaps="true"
        android:textColor="@color/ten"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        tools:ignore="HardcodedText,Suspicious0dp,TextContrastCheck"
        tools:layout_editor_absoluteY="601dp" />

</LinearLayout>